
<%= form_with url: login_index_path, method: :post, local: :true, class: "column g-3 container-sm", id: "login_user" do |form| %>
  <div class="row mb-3 text-info fw-bold">
      <%= form.label "Email", class: "col-form-label col-form-label-sm" %>
      <div class="col-sm-3">
        <%= form.email_field :email, class: "form-control form-control-sm", placeholder: "JoeBob@gmail.com" %>
      </div>
    </div>
  <div class="row mb-3 text-info fw-bold">
      <%= form.label "Password", class: "col-form-label col-form-label-sm" %>
      <div class="col-sm-3">
        <%= form.password_field :password, class: "form-control form-control-sm", placeholder: "password123" %>
      </div>
    </div>
    <%= form.submit "Login", class: "btn btn-primary" %>
<%end %>